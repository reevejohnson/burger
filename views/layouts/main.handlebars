<script>
	$(".burgerAvailable").on("click", function(event) {
    	var id = $(this).data("id");

    	$.ajax("/burgers/" + id, {
      		type: "PUT",
			data: null
    	}).then(
      		function() {
        		location.reload();
      		}
    	);
  	});

	$(".create-form").on("submit", function(event) {
    	event.preventDefault();

		if($('#burg').val() === '') {
			alert('You must put something in the text box!')
		} else {

    		var newBurger = {
      			burger_name: $("#burg").val().trim(),
    		};

    		$.ajax("/burgers", {
      			type: "POST",
      			data: newBurger
    		}).then(
      			function() {
        			location.reload();
      			}
    		);
		}
  	});
</script>